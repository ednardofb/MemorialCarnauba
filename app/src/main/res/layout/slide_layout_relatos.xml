<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/slide_imageRelatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_slide_relatos_claudia"/>
    <TextView
        android:id="@+id/slide_headingRelatos"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_below="@+id/slide_imageRelatos"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:text="HEADING"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:textColor="@color/colorWhite"
        android:id="@+id/slide_descRelatos"
        android:textSize="17sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slide_headingRelatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D E S C R I Ç Ã O"/>

</RelativeLayout>